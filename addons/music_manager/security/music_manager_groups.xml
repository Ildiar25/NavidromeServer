<odoo>
    <data noupdate="0">

        <!-- Music manager category group security -->
        <record id="module_category_music_manager" model="ir.module.category">
            <field name="name">Music Manager</field>
        </record>

        <record id="module_subcategory_music_manager" model="ir.module.category">
            <field name="name">Music Manager Administration</field>
            <field name="description">Allows user module management</field>
            <field name="parent_id" ref="music_manager.module_category_music_manager"/>
            <field name="sequence">20</field>
        </record>

        <!-- Music manager general user -->
        <record id="group_music_manager_user_general" model="res.groups">
            <field name="name">Music Manager User</field>
            <field name="comment">General users of the Music Manager module (only see own records)</field>
            <field name="category_id" ref="music_manager.module_subcategory_music_manager"/>
        </record>

        <!-- Music manager admin user -->
        <record id="group_music_manager_user_admin" model="res.groups">
            <field name="name">Music Manager Admin</field>
            <field name="comment">Admin users of the Music Manager module (can see all records)</field>
            <field name="category_id" ref="music_manager.module_subcategory_music_manager"/>
        </record>

        <!-- Music manager model rules: USER -->
        <record id="rule_music_manager_own_tracks" model="ir.rule">
            <field name="name">Music Manager | Own Tracks</field>
            <field name="model_id" ref="music_manager.model_music_manager_track"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('music_manager.group_music_manager_user_general'))]"/>
        </record>

        <record id="rule_music_manager_shared_albums" model="ir.rule">
            <field name="name">Music Manager | Shared Albums</field>
            <field name="model_id" ref="music_manager.model_music_manager_album"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('music_manager.group_music_manager_user_general'))]"/>
        </record>

        <record id="rule_music_manager_all_artists" model="ir.rule">
            <field name="name">Music Manager | All Artists</field>
            <field name="model_id" ref="music_manager.model_music_manager_artist"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('music_manager.group_music_manager_user_general'))]"/>
        </record>

        <record id="rule_music_manager_all_genres" model="ir.rule">
            <field name="name">Music Manager | All Genres</field>
            <field name="model_id" ref="music_manager.model_music_manager_genre"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('music_manager.group_music_manager_user_general'))]"/>
        </record>

        <!-- Music manager model rules: ADMIN -->
        <record id="rule_music_manager_all_tracks" model="ir.rule">
            <field name="name">Music Manager | All Tracks</field>
            <field name="model_id" ref="music_manager.model_music_manager_track"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('music_manager.group_music_manager_user_admin'))]"/>
        </record>

        <record id="rule_music_manager_all_albums" model="ir.rule">
            <field name="name">Music Manager | All Albums</field>
            <field name="model_id" ref="music_manager.model_music_manager_album"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('music_manager.group_music_manager_user_admin'))]"/>
        </record>
    </data>
</odoo>