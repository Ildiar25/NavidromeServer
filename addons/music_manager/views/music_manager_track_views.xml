<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="music_manager_track_view_action_general" model="ir.actions.act_window">
            <field name="name">My tracks</field>
            <field name="res_model">music_manager.track</field>
            <field name="view_mode">tree,form</field>
            <field name="groups_id" eval="[(6, 0, [ref('music_manager.group_music_manager_user_general')])]"/>
        </record>

        <record id="music_manager_track_view_action_admin" model="ir.actions.act_window">
            <field name="name">Track management</field>
            <field name="res_model">music_manager.track</field>
            <field name="view_mode">tree,form</field>
            <field name="groups_id" eval="[(6, 0, [ref('music_manager.group_music_manager_user_admin')])]"/>
            <field name="context">{'group_by': 'owner'}</field>
        </record>

        <!-- Tree view -->
        <record id="music_manager_track_view_tree" model="ir.ui.view">
            <field name="name">music_manager.track.view.tree</field>
            <field name="model">music_manager.track</field>
            <field name="arch" type="xml">
                <tree string="Songs" decoration-danger="is_deleted" decoration-warning="not is_saved" create="False">
                    <field name="picture" string="Cover" widget="image" options="{'preview_image': 'picture', 'size': [28]}" optional="hide"/>
                    <field name="disk_no" string="Disk no" optional="hide"/>
                    <field name="track_no" string="Track no" optional="hide"/>
                    <field name="name" string="Title"/>
                    <field name="display_artist_names" string="Artist(s)"/>
                    <field name="album_id" string="Album"/>
                    <field name="year" string="Year"/>
                    <field name="genre_id" string="Genre"/>
                    <field name="duration" string="Duration"/>
                    <field name="file_path" string="Path" optional="hide"/>
                    <field name="has_valid_path" column_invisible="True"/>
                    <field name="is_saved" column_invisible="True"/>
                    <field name="is_deleted" column_invisible="True"/>
                    <field name="owner" string="Owner" groups="music_manager.group_music_manager_user_admin"/>
                    <field name="create_date" string="Create date" groups="music_manager.group_music_manager_user_admin"/>
                    <field name="write_date" string="Last update" groups="music_manager.group_music_manager_user_admin"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="music_manager_track_view_form" model="ir.ui.view">
            <field name="name">music_manager.track.view.form</field>
            <field name="model">music_manager.track</field>
            <field name="arch" type="xml">
                <form string="Track" disable_autofocus="True">
<!--                    <field name="state" string="" widget="statusbar"/>-->
                    <field name="is_deleted" invisible="True"/>
                    <sheet>
                        <div class="d-flex flex-column justify-content-between">
                            <div>
                                <section>
                                    <header>
                                        <h1>ðŸŽ¯ Edit song metadata</h1>
                                    </header>
                                    <separator/>
                                    <div>
                                        <div class="d-flex flex-row justify-content-start">
                                            <div class="mx-3">
                                                <field name="picture" string="" widget="image" options="{'preview_image': 'picture', 'size': [200, 200]}"/>
                                            </div>
                                            <div class="mx-3" style="border-left: 1px solid #ccc; height: auto;"> </div>
                                            <div class="d-flex flex-row justify-content-between w-100">
                                                <div class="flex-grow-1 mx-3">
                                                    <group>
                                                        <field name="name" string="Title"/>
                                                        <field name="track_artist_ids" widget="many2many_tags" string="Track artist(s)"/>
                                                        <field name="album_id" string="Album"/>
                                                        <field name="genre_id" string="Genre"/>
                                                        <field name="collection" string="Part of a collection"/>
                                                        <field name="file_path" string="Path"/>
                                                        <field name="owner" string="Owner" readonly="False" groups="music_manager.group_music_manager_user_admin"/>
                                                        <field name="has_valid_path" invisible="True"/>
                                                    </group>
                                                </div>
                                                <div class="flex-grow-1 mx-3">
                                                    <group>
                                                        <field name="album_artist_id" string="Album artist" edit="collection"/>
                                                        <field name="original_artist_id" string="Original artist"/>
                                                        <field name="year" string="Year"/>

                                                    </group>
                                                    <div class="d-flex flex-row">
                                                        <group>
                                                            <field name="track_no" string="Track"/>
                                                            <field name="disk_no" string="Disk"/>
                                                        </group>
                                                        <group>
                                                            <field name="total_track" string="Total track"/>
                                                            <field name="total_disk" string="Total disk"/>
                                                        </group>
                                                    </div>
                                                    <group>
                                                        <field name="mime_type" string="MIME"/>
                                                    </group>
                                                </div>
                                            </div>
                                        </div>
                                        <separator/>
                                        <div class="d-flex flex-row justify-content-center">
                                            <h3 invisible="not is_deleted">ðŸ˜± MY GOSH! It is impossible to find this song. Add it again!</h3>
                                            <button name="save_changes" string="Update" class="btn-outline-success w-50" type="object" invisible="is_deleted"/>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Searchbar -->
        <record id="music_manager_track_view_searchbar" model="ir.ui.view">
            <field name="name">music_manager.track.view.searchbar</field>
            <field name="model">music_manager.track</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <!-- Custom fields -->
                    <field name="name" string="by track title"/>
                    <field name="display_artist_names" string="by artist name"/>
                    <field name="album_id" string="by album title"/>

                    <!-- Custom filters -->
                    <filter name="by_saved" string="Not saved" domain="[('is_saved', '=', False)]"/>
                    <filter name="by_path_type" string="Invalid path" domain="[('has_valid_path', '=', False)]" groups="music_manager.group_music_manager_user_admin"/>
                    <filter name="by_deleted_file" string="Deleted file" domain="[('is_deleted', '=', True)]" groups="music_manager.group_music_manager_user_admin"/>

                    <!-- Custom groups -->
                    <group string="Group by" expand="1">
                        <filter name="owner" string="Owner" context="{'group_by': 'owner'}" groups="music_manager.group_music_manager_user_admin"/>
                        <filter name="album_artist_id" string="Album artist" context="{'group_by': 'album_artist_id'}"/>
                        <filter name="year" string="Year" context="{'group_by': 'year'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>