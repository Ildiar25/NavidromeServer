<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="music_manager_track_view_action" model="ir.actions.act_window">
            <field name="name">Track</field>
            <field name="res_model">music_manager.track</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Tree view -->
        <record id="music_manager_track_tree_view" model="ir.ui.view">
            <field name="name">music_manager.track.tree</field>
            <field name="model">music_manager.track</field>
            <field name="arch" type="xml">
                <tree string="Songs">
                    <field name="cover" string="Cover" widget="image" options="{'preview_image': 'cover', 'size': [24]}" optional="hide"/>
                    <field name="name" string="Title"/>
                    <field name="original_artist" string="Artist"/>
                    <field name="album_id" string="Album"/>
                    <field name="year" string="Year"/>
                    <field name="genre_id" string="Genre"/>
                    <field name="duration" string="Duration"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="music_manager_track_form_view" model="ir.ui.view">
            <field name="name">music_manager.track.form</field>
            <field name="model">music_manager.track</field>
            <field name="arch" type="xml">
                <form string="Song">
                    <field name="state" string="" widget="statusbar"/>
                    <sheet>

                        <!-- First step -->
                        <section invisible="state != 'start'">
                            <header>
                                <h1>Ready to upload your next hit? üöÄ </h1>
                            </header>
                            <separator/>
                            <div class="d-flex flex-row justify-content-around">
                                <div class="w-50 mb-3">
                                    <h3 class="text-muted">Add a song!üéß</h3>
                                    <p>
                                        <em>Welcome to your personal music manager!</em>
                                        <br/>
                                        <br/>
                                        Here you can start building your collection by either uploading an
                                        <b>MP3 file</b> from your computer or adding a <b>YouTube link</b> to download
                                        and convert it automatically.
                                        <br/>
                                        Once your song is uploaded, you‚Äôll be able to review and edit its metadata to
                                        keep everything tidy and organized.
                                        <br/>
                                        <br/>
                                        <em>Let‚Äôs get started and bring some music to life!</em>
                                    </p>
                                </div>
                            </div>
                            <div class="d-flex flex-row justify-content-around">
                                <div class="d-flex flex-column align-items-center mx-3">
                                    <div class="mb-3">
                                        <img src="#" width="300" height="300"/>
                                    </div>
                                    <p class="mx-auto"><b>MP3 file</b></p>
                                    <field name="file" string="MP3 file"/>
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <div class="mb-3">
                                        <img src="#" width="300" height="300"/>
                                    </div>
                                    <p class="mx-auto"><b>YouTube URL</b></p>
                                    <field name="url" placeholder="https://"/>
                                </div>
                            </div>
                        </section>

                        <!-- Second step -->
                        <section invisible="state != 'uploaded'">
                            <header>
                                <h1>File uploaded successfully! üì§ </h1>
                            </header>
                            <group>
                                <field name="name" string="Title" readonly="True"/>
                            </group>
                        </section>

                        <section invisible="state != 'metadata'">
                            <header>
                                <h1>Let‚Äôs polish your track details! ‚úèÔ∏è </h1>
                            </header>
                            <group>
                                <field name="name" string="Title"/>
                            </group>
                        </section>

                        <section invisible="state != 'done'">
                            <header>
                                <h1>Your song is ready to rock! üéâ </h1>
                            </header>
                            <group>
                                <field name="name" string="Title" readonly="True"/>
                                <button name="save_file" string="Save" type="object"/>
                            </group>
                        </section>

                        <section invisible="state != 'added'">
                            <header>
                                <h1><field name="name"/> üéµ </h1>
                            </header>
                            <group>
                                <field name="name" string="Title" readonly="True"/>
                                <button name="save_changes" string="Update" type="object"/>
                            </group>
                        </section>
                        <div class="d-flex flex-row justify-content-between">
                            <div class="w-100 d-flex flex-row justify-content-start">
                                <button name="action_back" string="Back" class="btn btn-outline-primary" type="object" invisible="state != 'done'"/>
                            </div>
                            <div class="w-100 d-flex flex-row justify-content-end">
                                <button name="action_next" string="Next" class="btn btn-outline-primary" type="object" invisible="state == 'added'"/>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Searchbar -->

    </data>
</odoo>