<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="music_manager_artist_view_action_general" model="ir.actions.act_window">
            <field name="name">My artists</field>
            <field name="res_model">music_manager.artist</field>
            <field name="view_mode">kanban,form</field>
            <field name="groups_id" eval="[(6, 0, [ref('music_manager.group_music_manager_user_general')])]"/>
        </record>

        <record id="music_manager_artist_view_action_admin" model="ir.actions.act_window">
            <field name="name">Artist management</field>
            <field name="res_model">music_manager.artist</field>
            <field name="view_mode">tree,form</field>
            <field name="groups_id" eval="[(6, 0, [ref('music_manager.group_music_manager_user_admin')])]"/>
        </record>

        <!-- Kanban view -->
        <record id="music_manager_artist_view_kanban" model="ir.ui.view">
            <field name="name">music_manager.artist.view.kanban</field>
            <field name="model">music_manager.artist</field>
            <field name="arch" type="xml">
                <kanban string="Artist kanban view">
                    <field name="is_group"/>
                    <field name="country_id"/>
                    <field name="country_code"/>
                    <template>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click" style="box-shadow: 0 2px 6px rgba(0,0,0,0.2);">
                                <div class="o_kanban_record_title d-flex flex-row justify-content-between">
                                    <div class="d-flex flex-column">
                                        <field name="name"/>
                                        <p class="text-muted"><small><em>by <field name="owner"/></em></small></p>
                                    </div>
                                    <img t-if="record.country_id.raw_value" t-attf-src="/base/static/img/country_flags/#{record.country_code.raw_value.toLowerCase()}.png" t-att-title="record.country_id.value" width="20" height="15" alt="Country flag"/>
                                </div>
                                <hr class="mb-2"/>
                                <div class="o_kanban_content d-flex flex-row">
                                    <div class="oe_kanban_image d-flex align-items-center justify-content-start" style="height: 125px; width: 100%; overflow: hidden">
                                        <field name="picture" string="" widget="image" options="{'preview_image': 'picture', 'size': [125]}"/>
                                    </div>
                                    <div class="oe_kanban_details flex-grow-1">
                                        <ul>
                                            <li class="text-truncate" t-if="!record.is_group.raw_value" t-att-title="record.real_name.value"><i class="fa fa-user me-2" title="User icon"/><field name="real_name"/></li>
                                            <li class="text-truncate" t-if="record.start_year.raw_value"><i class="fa fa-calendar me-2" title="Calendar icon"/><field name="start_year"/></li>
                                            <li class="text-truncate"><i class="fa fa-dot-circle-o me-2" title="Disk icon"/><field name="album_amount"/></li>
                                            <li class="text-truncate"><i class="fa fa-music me-2" title="Music icon"/><field name="track_amount"/></li>
                                            <li class="text-truncate" t-if="record.website.raw_value" t-att-title="record.website.value"><i class="fa fa-globe me-2" title="Globe icon"/><field name="website"/></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </template>
                </kanban>
            </field>
        </record>

        <!-- Tree view -->
        <record id="music_manager_artist_view_tree" model="ir.ui.view">
            <field name="name">music_manager.artist.view.tree</field>
            <field name="model">music_manager.artist</field>
            <field name="arch" type="xml">
                <tree string="Artist tree view">
                    <field name="picture" string="Picture" widget="image" options="{'preview_image': 'picture', 'size': [28]}" optional="hide"/>
                    <field name="name" string="Artist or Group"/>
                    <field name="real_name" string="Real name"/>
                    <field name="start_year" string="Debut year" optional="hide"/>
                    <field name="website" string="Website" optional="hide"/>
                    <field name="track_amount" string="Total tracks"/>
                    <field name="album_amount" string="Total albums"/>
                    <field name="country_id" string="Country"/>
                    <field name="owner" string="Owner"/>
                    <field name="write_uid" string="Updated by"/>
                    <field name="create_date" string="Create date"/>
                    <field name="write_date" string="Last update"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="music_manager_artist_view_form" model="ir.ui.view">
            <field name="name">music_manager.artist.view.form</field>
            <field name="model">music_manager.artist</field>
            <field name="arch" type="xml">
                <form string="Artist form view" disable_autofocus="True">
                    <sheet class="form-bg-decoration">
                        <header>
                            <h1> ðŸ‘¤ Editing artist</h1>
                        </header>
                        <separator/>
                        <group class="flex-row justify-content-start">
                            <group style="border-right: 1px solid #ccc; height: auto; width: 250px">
                                <field name="picture" string="" class="crop-image-preview" widget="image" options="{'preview_image': 'picture', 'size': [200, 200]}"/>
                            </group>
                            <group class="flex-grow-1">
                                <group>
                                    <field name="name" string="Group or artist name"/>
                                    <field name="real_name" string="Real name"/>
                                    <field name="start_year" string="Birth year" invisible="is_group"/>
                                    <field name="start_year" string="Debut year" invisible="not is_group"/>
                                    <field name="is_group" string="Is group"/>
                                    <field name="website" string="Website" widget="url"/>
                                    <field name="owner" string="Owner" readonly="False" groups="music_manager.group_music_manager_user_admin"/>
                                </group>
                                <group>
                                    <field name="country_id" string="Country"/>
                                    <field name="biography" string="Biography"/>
                                    <field name="group_ids" widget="many2many_tags" string="Groups" invisible="is_group"/>
                                    <field name="member_ids" widget="many2many_tags" string="Members" invisible="not is_group"/>
                                </group>
                            </group>
                        </group>
                        <separator/>
                        <div class="d-flex flex-row justify-content-center">
                            <button name="update_songs" string="Update metadata for all songs" class="btn-outline-primary w-50" type="object"/>
                        </div>
                        <notebook>
                            <page string="Albums">
                                <field name="album_ids" readonly="True">
                                    <tree>
                                        <field name="picture" string="Cover" widget="image" options="{'preview_image': 'picture', 'size': [28]}"/>
                                        <field name="name" string="Title"/>
                                        <field name="album_artist_id" string="Album artist"/>
                                        <field name="track_amount" string="Track amount"/>
                                        <field name="disk_amount" string="Disk amount" optional="hide"/>
                                        <field name="genre_id" string="Genre"/>
                                        <field name="year" string="Year"/>
                                        <field name="owner" string="Owner" groups="music_manager.group_music_manager_user_admin"/>
                                        <field name="create_date" string="Create date" groups="music_manager.group_music_manager_user_admin"/>
                                        <field name="write_date" string="Last update" groups="music_manager.group_music_manager_user_admin"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Tracks">
                                <field name="track_ids" readonly="True">
                                    <tree decoration-danger="is_deleted" decoration-warning="not is_saved">
                                        <field name="track_no" string="Track no" optional="hide"/>
                                        <field name="name" string="Title"/>
                                        <field name="album_artist_id" string="Album artist"/>
                                        <field name="album_id" string="Album"/>
                                        <field name="year" string="Year"/>
                                        <field name="genre_id" string="Genre"/>
                                        <field name="duration" string="Duration"/>
                                        <field name="is_saved" column_invisible="True"/>
                                        <field name="is_deleted" column_invisible="True"/>
                                        <field name="owner" string="Owner" groups="music_manager.group_music_manager_user_admin"/>
                                        <field name="create_date" string="Create date" groups="music_manager.group_music_manager_user_admin"/>
                                        <field name="write_date" string="Last update" groups="music_manager.group_music_manager_user_admin"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Searchbar -->
        <record id="music_manager_artist_view_searchbar" model="ir.ui.view">
            <field name="name">music_manager.artist.view.searchbar</field>
            <field name="model">music_manager.artist</field>
            <field name="arch" type="xml">
                <search string="Artist searchbar view">
                    <!-- Custom fields -->
                    <field name="name" string="by artist name"/>

                    <!-- Custom filters -->
                    <filter name="by_group" string="Is group" domain="[('is_group', '=', True)]"/>
                    <filter name="by_artist" string="Is artist" domain="[('is_group', '=', False)]"/>

                    <!-- Custom groups -->
                    <group string="Group by" expand="1">
                        <filter name="owner" string="Owner" context="{'group_by': 'owner'}" groups="music_manager.group_music_manager_user_admin"/>
                        <filter name="start_year" string="Year" context="{'group_by': 'start_year'}"/>
                        <filter name="country_id" string="Country" context="{'group_by': 'country_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>