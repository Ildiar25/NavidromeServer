<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="music_manager_album_view_action" model="ir.actions.act_window">
            <field name="name">Album</field>
            <field name="res_model">music_manager.album</field>
            <field name="view_mode">kanban,form</field>
        </record>

        <!-- Kanban view -->
        <record id="music_manager_album_view_kanban" model="ir.ui.view">
            <field name="name">music_manager.album.view.kanban</field>
            <field name="model">music_manager.album</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <template>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click d-flex flex-column h-100" t-att-title="record.name.value">
                                <div class="oe_kanban_image d-flex align-items-center justify-content-center" style="width: 100%; overflow: hidden; background: #f8f9fa;">
                                    <field name="cover" string="" widget="image" style="max-height: 100%; max-width: 100%;" options="{'preview_image': 'cover'}"/>
                                </div>
                            </div>
                        </t>
                    </template>
                </kanban>
            </field>
        </record>

        <!-- Form view -->
        <record id="music_manager_album_view_form" model="ir.ui.view">
            <field name="name">music_manager.album.view.form</field>
            <field name="model">music_manager.album</field>
            <field name="arch" type="xml">
                <form string="Album">
                    <sheet>
                        <div class="d-flex flex-column justify-content-between">
                            <div class="d-flex flex-row justify-content-start">
                                <div class="mx-3">
                                    <field name="cover" string="" widget="image" options="{'preview_image': 'cover', 'size': [200, 200]}"/>
                                </div>
                                <div class="mx-3" style="border-left: 1px solid #ccc; height: auto;"> </div>
                                <div>
                                    <h1><field name="name"/></h1>
                                    <field name="year" string="Year"/>
                                </div>
                            </div>
                            <separator string="Songs"/>
                            <field name="track_ids" readonly="True"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>