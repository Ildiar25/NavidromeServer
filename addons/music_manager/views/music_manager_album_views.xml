<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="music_manager_album_view_action_general" model="ir.actions.act_window">
            <field name="name">My albums</field>
            <field name="res_model">music_manager.album</field>
            <field name="view_mode">kanban,form</field>
            <field name="groups_id" eval="[(6, 0, [ref('music_manager.group_music_manager_user_general')])]"/>
        </record>

        <record id="music_manager_album_view_action_admin" model="ir.actions.act_window">
            <field name="name">Album management</field>
            <field name="res_model">music_manager.album</field>
            <field name="view_mode">tree,form</field>
            <field name="groups_id" eval="[(6, 0, [ref('music_manager.group_music_manager_user_admin')])]"/>
            <field name="context">{'group_by': 'owner'}</field>
        </record>

        <!-- Kanban view -->
        <record id="music_manager_album_view_kanban" model="ir.ui.view">
            <field name="name">music_manager.album.view.kanban</field>
            <field name="model">music_manager.album</field>
            <field name="arch" type="xml">
                <kanban srting="Album kanban view">
                    <field name="name"/>
                    <field name="is_favorite"/>
                    <template>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click d-flex flex-column h-100" t-att-title="record.name.value" style="overflow: hidden; box-shadow: 0 2px 6px rgba(0,0,0,0.2);">
                                <div class="position-relative" style="width: 100%; overflow: hidden; background: #f8f9fa;">
                                    <field name="picture" string="" widget="image" class="oe_kanban_image" options="{'preview_image': 'picture'}"/>
                                    <button name="set_favorite" type="object" class="oe_stat_button btn-light position-absolute top-0 end-0 m-1 p-1 shadow-sm" style="z-index: 10;" help="Set favorite">
                                        <i t-if="record.is_favorite.raw_value" class="fa fa-heart text-danger heartbeat"/>
                                        <i t-else="" class="fa fa-heart-o"/>
                                    </button>
                                </div>
                            </div>
                        </t>
                    </template>
                </kanban>
            </field>
        </record>

        <!-- Tree view -->
        <record id="music_manager_album_view_tree" model="ir.ui.view">
            <field name="name">music_manager.album.view.tree</field>
            <field name="model">music_manager.album</field>
            <field name="arch" type="xml">
                <tree string="Album tree view">
                    <field name="picture" string="Cover" widget="image" options="{'preview_image': 'picture', 'size': [28]}"/>
                    <field name="name" string="Album title"/>
                    <field name="album_artist_id" string="Album artist"/>
                    <field name="genre_id" string="Genre"/>
                    <field name="track_amount" string="Track amount" optional="hide"/>
                    <field name="disk_amount" string="Disk amount" optional="hide"/>
                    <field name="year" string="Year" optional="hide"/>
                    <field name="owner" string="Owner" optional="hide"/>
                    <field name="create_date" string="Create date"/>
                    <field name="write_date" string="Last update"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="music_manager_album_view_form" model="ir.ui.view">
            <field name="name">music_manager.album.view.form</field>
            <field name="model">music_manager.album</field>
            <field name="arch" type="xml">
                <form string="Album form view" disable_autofocus="True">
                    <sheet>
                        <header>
                            <h1> ðŸ’½ Editing album</h1>
                        </header>
                        <separator/>
                        <group class="flex-row justify-content-start">
                            <group style="border-right: 1px solid #ccc; height: auto; width: 250px">
                                <field name="picture" string="" widget="image" options="{'preview_image': 'picture', 'size': [200, 200]}"/>
                            </group>
                            <group class="flex-grow-1">
                                <field name="name" string="Album title"/>
                                <field name="year" string="Year"/>
                                <field name="album_artist_id" string="Album artist"/>
                                <field name="genre_id" string="Genre"/>
                                <field name="owner" string="Owner" readonly="False" groups="music_manager.group_music_manager_user_admin"/>
                            </group>
                        </group>
                        <separator/>
                        <div class="d-flex flex-row justify-content-center">
                            <button name="update_songs" string="Update metadata for all songs" class="btn-outline-primary w-50" type="object"/>
                        </div>
                        <separator/>
                        <notebook>
                            <page string="Track list">
                                <field name="track_ids" readonly="True">
                                <tree decoration-danger="is_deleted" decoration-warning="not is_saved">
                                    <field name="track_no" string="#" nolabel="1" width="20px" decoration-bf="True"/>
                                    <field name="name" string="Title"/>
                                    <field name="album_artist_id" string="Album artist"/>
                                    <field name="album_id" string="Album"/>
                                    <field name="year" string="Year"/>
                                    <field name="genre_id" string="Genre"/>
                                    <field name="duration" string="Duration"/>
                                    <field name="is_saved" column_invisible="True"/>
                                    <field name="is_deleted" column_invisible="True"/>
                                </tree>
                            </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Searchbar -->
        <record id="music_manager_album_view_searchbar" model="ir.ui.view">
            <field name="name">music_manager.album.view.searchbar</field>
            <field name="model">music_manager.album</field>
            <field name="arch" type="xml">
                <search string="Album searchbar view">
                    <!-- Custom fields -->
                    <field name="name" string="by album title"/>
                    <field name="album_artist_id" string="by album artist"/>

                    <!-- Custom groups -->
                    <group string="Group by" expand="1">
                        <filter name="owner" string="Owner" context="{'group_by': 'owner'}" groups="music_manager.group_music_manager_user_admin"/>
                        <filter name="album_artist_id" string="Album artist" context="{'group_by': 'album_artist_id'}"/>
                        <filter name="year" string="Year" context="{'group_by': 'year'}"/>
                        <filter name="genre_id" string="Genre" context="{'group_by': 'genre_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>