<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="music_manager_album_view_action" model="ir.actions.act_window">
            <field name="name">Album</field>
            <field name="res_model">music_manager.album</field>
            <field name="view_mode">kanban,form</field>
        </record>

        <!-- Kanban view -->
        <record id="music_manager_album_view_kanban" model="ir.ui.view">
            <field name="name">music_manager.album.view.kanban</field>
            <field name="model">music_manager.album</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <template>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click d-flex flex-column h-100" t-att-title="record.name.value">
                                <div class="oe_kanban_image d-flex align-items-center justify-content-center" style="width: 100%; overflow: hidden; background: #f8f9fa;">
                                    <field name="cover" string="" widget="image" style="max-height: 100%; max-width: 100%;" options="{'preview_image': 'cover'}"/>
                                </div>
                            </div>
                        </t>
                    </template>
                </kanban>
            </field>
        </record>

        <!-- Form view -->
        <record id="music_manager_album_view_form" model="ir.ui.view">
            <field name="name">music_manager.album.view.form</field>
            <field name="model">music_manager.album</field>
            <field name="arch" type="xml">
                <form string="Album">
                    <sheet>
                        <div class="d-flex flex-column justify-content-between">
                            <div class="d-flex flex-row justify-content-start">
                                <div class="mx-3">
                                    <field name="cover" string="" widget="image" options="{'preview_image': 'cover', 'size': [200, 200]}"/>
                                </div>
                                <div class="mx-3" style="border-left: 1px solid #ccc; height: auto;"> </div>
                                <div class="d-flex flex-column justify-content-between w-100">
                                    <h1 class="form_title"><field name="name"/></h1>
                                    <group class="w-25">
                                        <field name="year" string="Year"/>
                                        <field name="album_artist_id" string="Album artist"/>
                                        <field name="genre_id" string="Genre"/>
                                    </group>
                                    <button name="update_songs" string="Update metadata" class="btn-outline-primary w-25" type="object"/>
                                </div>
                            </div>
                            <separator string="Songs"/>
                            <field name="track_ids" readonly="True">
                                <tree decoration-danger="is_deleted" decoration-warning="not is_saved">
                                    <field name="track_no" string="Track no" optional="hide"/>
                                    <field name="name" string="Title"/>
                                    <field name="album_artist_id" string="Album artist"/>
                                    <field name="album_id" string="Album"/>
                                    <field name="year" string="Year"/>
                                    <field name="genre_id" string="Genre"/>
                                    <field name="duration" string="Duration"/>
                                    <field name="is_saved" column_invisible="True"/>
                                    <field name="is_deleted" column_invisible="True"/>
                                </tree>
                            </field>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Searchbar -->
        <record id="music_manager_album_searchbar" model="ir.ui.view">
            <field name="name">music_manager.album.searchbar</field>
            <field name="model">music_manager.album</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <!-- Custom fields -->
                    <field name="name" string="by album title"/>
                    <field name="album_artist_id" string="by album artist"/>

                    <!-- Custom groups -->
                    <group string="Group by" expand="1">
                        <filter name="album_artist_id" string="Album artist" context="{'group_by': 'album_artist_id'}"/>
                        <filter name="year" string="Year" context="{'group_by': 'year'}"/>
                        <filter name="genre_id" string="Genre" context="{'group_by': 'genre_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>