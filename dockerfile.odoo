FROM odoo:17.0

# Work directory
WORKDIR /opt/odoo

# Set root user
USER root

# Set environment dependencies
RUN apt-get update && apt-get install -y --no-install-recommends libmagic1 libmagic-dev ffmpeg && apt-get clean && rm -rf /var/lib/apt/lists/*

ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8

# Update requirements & permissions files
COPY requirements.txt .
COPY permissions.sh .

# Normalize line endings (in case the file was edited on Windows) & run permissions file
RUN sed -i 's/\r$//' permissions.sh && bash ./permissions.sh

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Fix permissions for Odoo runtime paths
# RUN mkdir -p /var/lib/odoo/.local /mnt/extra-addons /home/odoo && chown -R odoo:odoo /var/lib/odoo /mnt/extra-addons /opt/odoo /home/odoo && chmod -R 755 /var/lib/odoo

# Define entrypoint
ENTRYPOINT ["/entrypoint.sh"]

# Default command (empty â€” handled by entrypoint)
CMD []
